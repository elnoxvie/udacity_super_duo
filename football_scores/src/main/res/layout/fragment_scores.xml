<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginLeft="@dimen/list_horizonal_margin"
             android:layout_marginRight="@dimen/list_horizonal_margin" >

    <barqsoft.footballscores.view.MyRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_outer_padding"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideInset"
        android:scrollbarThumbVertical="@drawable/scroll_bar_vertical"
        android:visibility="gone"/>

    <include layout="@layout/empty_view_container"/>
    <include layout="@layout/progress_container" />

</FrameLayout>
